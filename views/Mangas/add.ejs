<%- include('../partials/layout.ejs') %>
<section class="container-fluid">
  <div class="row">
    <div class="col-12 gy-3">
<h2>Ajouter un manga</h2>
      <form method="POST" action="/manga/store" class="gy-3">
        <div class="mb-3">
          <label for="name">Nom du manga : </label>
          <input type="text" id="name" name="name" class="form-control">
        </div>
        <div class="mb-3">
          <label for="tag">Tag</label>
          <select type="select" id="tag" name="tag" class="form-select">
            <option selected>Choisir la cat√©gorie</option>
            <option value="anime">Anime</option>
            <option value="scan">Manga</option>
          </select>
        </div>
        <div class="mb-3">
          <label>Saisir un commentaire</label>
          <input type="textarea" id="comment" name="comment" class="form-control">
        </div>

        <input type="submit" value="valider" class="btn btn-dark">
      </form>

      <a href="/manga">Retourner vers la liste de manga</a>
    </div>
  </div>
</section>